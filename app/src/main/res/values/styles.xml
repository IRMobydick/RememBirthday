<resources>

    <!-- SplashScreen theme -->
    <style name="SplashChocolateTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <!-- Base application theme. -->
    <style name="ChocolateTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColor">@color/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="android:textAppearance">@style/Chocolate.TextAppearance</item>
        <item name="android:textAppearanceMedium">@style/Chocolate.TextAppearance</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDarkInverse</item>
    </style>

    <style name="Chocolate.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/background</item>
    </style>

    <style name="Chocolate.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Chocolate.TextAppearance.Inverse" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryInverse</item>
    </style>

    <style name="Chocolate.CardView" parent="CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@color/backgroundElement</item>
        <!-- Ripple for API 21 of android, and regular selector on older -->
        <item name="android:foreground">?android:selectableItemBackground</item>
        <!-- Resting Elevation from Material guidelines -->
        <item name="cardElevation">2dp</item>
        <!-- Add corner Radius -->
        <item name="cardCornerRadius">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Chocolate.CardView.Alternative" parent="CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@color/backgroundElementInverse</item>
        <!-- Ripple for API 21 of android, and regular selector on older -->
        <item name="android:foreground">?android:selectableItemBackground</item>
        <!-- Resting Elevation from Material guidelines -->
        <item name="cardElevation">2dp</item>
        <!-- Add corner Radius -->
        <item name="cardCornerRadius">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorPrimaryInverse</item>
    </style>

    <style name="Chocolate.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/background</item>
    </style>

</resources>
