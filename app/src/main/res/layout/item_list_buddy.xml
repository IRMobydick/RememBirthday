<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/buddy_icon"
        android:layout_width="@dimen/buddy_height_icon"
        android:layout_height="@dimen/buddy_height_icon"
        android:padding="8dp"
        android:src="@drawable/ic_person_black_24dp"
        android:tint="@color/colorWhite"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/buddy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/buddy_icon"
        android:layout_toEndOf="@+id/buddy_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/buddy_stay_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/buddy_name"
        android:layout_toRightOf="@+id/buddy_icon"
        android:layout_toEndOf="@+id/buddy_icon"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp" />

</RelativeLayout>