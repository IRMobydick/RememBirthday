<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/buddy_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/item_list_contact_icon"
            android:layout_width="@dimen/buddy_list_height_icon"
            android:layout_height="@dimen/buddy_list_height_icon"
            android:src="@drawable/ic_person_tint"/>

        <TextView
            android:id="@+id/item_list_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/item_list_contact_icon"
            android:layout_toEndOf="@+id/item_list_contact_icon"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>
    </RelativeLayout>
</LinearLayout>