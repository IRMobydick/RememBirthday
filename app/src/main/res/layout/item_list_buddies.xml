<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/buddy_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Chocolate.CardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <FrameLayout
                android:id="@+id/buddy_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/buddy_icon"
                    android:layout_width="@dimen/buddy_list_height_icon"
                    android:layout_height="@dimen/buddy_list_height_icon"
                    android:background="@drawable/ic_person_tint_inverse"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/buddy_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryInverse"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/background_year"/>
            </FrameLayout>

            <TextView
                android:id="@+id/buddy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text=""
                android:layout_toRightOf="@+id/buddy_icon_container"
                android:layout_toEndOf="@+id/buddy_icon_container"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/buddy_birthday_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/buddy_days_left"
                android:layout_toRightOf="@+id/buddy_icon_container"
                android:layout_toEndOf="@+id/buddy_icon_container" />

            <TextView
                android:id="@+id/buddy_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=""
                android:layout_below="@+id/buddy_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>