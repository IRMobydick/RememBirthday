<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_details_buddy_container_actions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ChocolateTheme.CardView.Alternative">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/smsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_sms_title"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryInverse"
            android:layout_toLeftOf="@+id/item_list_auto_message_button_delete"
            android:layout_toStartOf="@+id/item_list_auto_message_button_delete"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_list_auto_message_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/item_list_auto_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SMS Content"
            android:layout_below="@+id/smsTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/item_list_auto_message_content"
            android:paddingTop="12dp">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_list_auto_message_date_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryInverse"
                android:text="At 10h06 The day of the anniversary"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>