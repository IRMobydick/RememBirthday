<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_birthday_select_card_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.CardView"
        android:layout_gravity="center" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/fragment_birthday_select_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/fragment_birthday_select_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_birthday_select_month"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_birthday_select_card_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_birthday_select_card_date"
        style="@style/AppTheme.CardView.Alternative">
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/fragment_birthday_select_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/fragment_birthday_select_container_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_birthday_select_card_year"
        android:layout_centerInParent="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            style="@style/AppTheme.CardView"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="80dp">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/fragment_birthday_select_cake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/img_cake"/>
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragment_birthday_select_cake"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:text="5 Days Left"
                    android:textSize="26sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>